package arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioFor {

	
	public static void main(String[] args) {
		
		Scanner entrada =  new Scanner(System.in);
		System.out.println("Informe a quantidade de alunos até 6: ");
		int qtdAluno = entrada.nextInt();

		double notasAlunos [] = new double [qtdAluno];
		
		System.out.println(Arrays.toString(notasAlunos));
		
		for (int i = 0; i < notasAlunos.length; i++) {
			System.out.println("Informe a nota " + (i + 1) + ": "); //informa qual nota está sendo inserida
			notasAlunos[i] = entrada.nextInt(); //cada linha será inserida uma nota, até a qunatida de alunos que foi setada
		}

		System.out.println(Arrays.toString(notasAlunos));
		
		double total = 0;
		for(double notas: notasAlunos ) {
			total += notas;
		}
		double media = total / notasAlunos.length;
		System.out.println("A média é: "  + media);
		entrada.close();
	}
}
