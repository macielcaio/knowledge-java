package arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioFor {

	
	public static void main(String[] args) {
		
		Scanner entrada =  new Scanner(System.in);
		System.out.println("Informe a quantidade de alunos até 6: ");
		int qtdAluno = entrada.nextInt();

		double notasAlunos [] = new double [qtdAluno];
		
		System.out.println(Arrays.toString(notasAlunos));
		
		for (int i = 0; i < notasAlunos.length; i++) {
			System.out.println("Informe a nota " + (i + 1) + ": "); //informa qual nota está sendo inserida
			notasAlunos[i] = entrada.nextInt();
		}

		System.out.println(Arrays.toString(notasAlunos));
		entrada.close();
	}
}
