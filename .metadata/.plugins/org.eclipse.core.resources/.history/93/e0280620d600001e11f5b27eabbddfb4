package arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioFor {

	
	public static void main(String[] args) {
		
		Scanner entrada =  new Scanner(System.in);
		System.out.print("Informe a quantidade de alunos até 6: ");
		int qtdAluno = entrada.nextInt();

		double notasAlunos [] = new double [qtdAluno];
		System.out.println(Arrays.toString(notasAlunos));
		
		Scanner entrada2 =  new Scanner(System.in);
		System.out.print("Informe nota do aluno: ");
		double NotaAluno = entrada2.nextDouble();
		
		double totalAlunoA = 0;
		
		
		for (double i = 0; i < notasAlunos.length; NotaAluno++) {
			totalAlunoA += notasAlunos[(int) NotaAluno];
		}
		System.out.println(Arrays.toString(notasAlunos));
		entrada.close();
		entrada2.close();
	}
}
