package arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioFor {

	
	public static void main(String[] args) {
		
		Scanner entrada =  new Scanner(System.in);
		System.out.print("Informe a quantidade de alunos até 6: ");
		int qtdAluno = entrada.nextInt();

		
		Scanner entrada2 =  new Scanner(System.in);
		System.out.print("Informe a quantidade de alunos até 6: ");
		double NotaAluno = entrada2.nextInt();
		double totalAlunoA = 0;
		
		double notasAlunos [] = new double [qtdAluno];
		for (double i = 0; i < notasAlunos.length;) {
			totalAlunoA += notasAlunos[(int) NotaAluno]; //adiciona cada indice de array no total
		}
		System.out.println(Arrays.toString(notasAlunos));

	}
}
